<div class="m-callout">

    <div class="container">
        <div class="row">
            <div class="col-12 col-md-10 col-xxl-8 mx-auto">
                <div class="row">
                    <div class="col-12">
                        <div class="m-callout__wrapper">
                            <h2 class="m-callout__title">
                                {{ block.headline }}
                            </h2>
                            <div class="m-callout__content">
                                {{ block.text.render | raw }}
                            </div>
                            <p class="m-callout__linkWrapper">
                                <a class="m-callout__link a-wavelink -wavelinkWhite" href="{{ block.link_url }}">
                                    {{ block.link_text }}
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>